{% extends 'base.html.twig' %}

{% block title %}Detalii Produs: {{ product.name }}{% endblock %}

{% block body %}
    <div class="max-w-4xl mx-auto p-6 lg:p-12">
        <div class="bg-white shadow-2xl rounded-xl p-10">
            <div class="flex flex-col md:flex-row gap-8">

                <!-- Imagine Placeholder -->
                <div class="md:w-1/3 bg-gray-100 rounded-lg flex items-center justify-center p-8">
                    <svg class="w-24 h-24 text-indigo-500" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 8h14M5 8a2 2 0 110-4h14a2 2 0 110 4M5 8v10a2 2 0 002 2h10a2 2 0 002-2V8m-9 4h4"></path></svg>
                </div>

                <!-- Detalii Produs -->
                <div class="md:w-2/3">
                    <h1 class="text-4xl font-extrabold text-gray-900 mb-2">{{ product.name }}</h1>
                    <span class="px-4 py-1 text-sm font-semibold text-pink-700 bg-pink-100 rounded-full shadow-md inline-block mb-6">
                        ID: #{{ product.id }}
                    </span>

                    <h2 class="text-xl font-bold text-gray-800 mt-4 mb-2">Descriere</h2>
                    <p class="text-gray-600 leading-relaxed">{{ product.description }}</p>

                    <div class="mt-6 border-t pt-4">
                        <p class="text-lg font-semibold text-gray-700">
                            Dimensiune:
                            <span class="text-indigo-600 font-bold ml-2">{{ product.size }}</span>
                        </p>
                    </div>

                    <!-- Butoane de Actiune -->
                    <div class="mt-8 flex space-x-4">
                        <a href="{{ path('product_edit', {'id': product.id}) }}" class="flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-lg shadow-lg hover:bg-blue-700 transition">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path></svg>
                            Editează
                        </a>

                        <!-- Butonul de Ștergere (deschide modalul _delete.html.twig) -->
                        <button onclick="document.getElementById('delete-modal').classList.remove('hidden')" class="flex items-center px-6 py-3 bg-red-600 text-white font-semibold rounded-lg shadow-lg hover:bg-red-700 transition">
                            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                            Șterge
                        </button>
                    </div>

                    <div class="mt-8">
                        <a href="{{ path('product_index') }}" class="text-indigo-500 hover:text-indigo-700 font-medium transition duration-150">
                            <svg class="w-4 h-4 inline mr-1 -mt-1" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path></svg>
                            Înapoi la Catalog
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Include modalul de stergere in pagina de detalii -->
    {{ include('product/_delete.html.twig', {'id': product.id}) }}
{% endblock %}
