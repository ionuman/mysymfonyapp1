{% set id = id|default(null) %}

<!-- Modal Fundal - Asigură-te că include toată pagina -->
<div id="delete-modal" class="hidden fixed inset-0 z-50 bg-gray-900 bg-opacity-70 overflow-y-auto h-full w-full backdrop-blur-sm transition duration-300">

    <!-- NOU: Centrare Verticală și Orizontală folosind Flexbox -->
    <div class="flex items-center justify-center min-h-screen">

        <!-- Container Modal Principal -->
        <div class="bg-white rounded-xl shadow-2xl w-11/12 md:w-full max-w-sm mx-auto p-8 transform transition duration-300 ease-in-out">

            <!-- Antet -->
            <div class="mt-3 text-center">
                <div class="mx-auto flex items-center justify-center h-16 w-16 rounded-full bg-red-100 mb-4">
                    <!-- Iconiță ajustată la o dimensiune optimă (h-8 w-8) -->
                    <svg class="h-8 w-8 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path></svg>
                </div>

                <!-- Titlu stilizat -->
                <h3 class="text-2xl font-extrabold text-gray-900 mt-2">
                    Confirmare Ștergere
                </h3>

                <!-- Text stilizat -->
                <div class="mt-4 px-2 py-3">
                    <p class="text-base font-medium text-gray-700">
                        Esti sigur ca vrei sa faci asta?
                    </p>
                </div>
            </div>

            <!-- Butoane de Actiune -->
            <div class="items-center px-4 py-3 flex justify-between space-x-3 mt-4">
                <button id="close-modal"
                        onclick="document.getElementById('delete-modal').classList.add('hidden')"
                        class="px-4 py-2 bg-gray-200 text-gray-700 text-lg font-medium rounded-lg w-full shadow-md hover:bg-gray-300 transition duration-150">
                    Anulează
                </button>

                <form method="post" action="{{ path('product_delete', {'id': id}) }}" class="w-full">
                    <button type="submit"
                            class="px-4 py-2 bg-red-600 text-white text-lg font-medium rounded-lg w-full shadow-md hover:bg-red-700 transition duration-150 transform hover:scale-[1.02]">
                        Șterge Definitiv
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
<script>
    // Permite ca modalul sa fie inchis si prin click in afara ferestrei
    document.getElementById('delete-modal').addEventListener('click', function(e) {
        // Verificam daca elementul pe care s-a dat click este fundalul modalului (nu containerul alb)
        if (e.target.id === 'delete-modal') {
            e.target.classList.add('hidden');
        }
    });
</script>
