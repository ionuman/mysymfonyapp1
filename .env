# .env (or override DATABASE_URL in .env.local to avoid committing your changes)

DEFAULT_URI="mysql://db_user:db_password@127.0.0.1:3306/products"

# Folosim 127.0.0.1 pentru că Docker a scos portul 3306 "în afară" către Windows
DATABASE_URL="mysql://root:root@127.0.0.1:3306/products?serverVersion=8.0"

# customize this line!
# DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/products?serverVersion=8.0.37"

# to use mariadb:
# Before doctrine/dbal < 3.7
# DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/db_name?serverVersion=mariadb-10.5.8"
# Since doctrine/dbal 3.7
# DATABASE_URL="mysql://db_user:db_password@127.0.0.1:3306/db_name?serverVersion=10.5.8-MariaDB"


# to use sqlite:
# DATABASE_URL="sqlite:///%kernel.project_dir%/var/app.db"

# to use postgresql:
# DATABASE_URL="postgresql://app:!admin!@127.0.0.1:5432/app?serverVersion=16&charset=utf8"

# to use oracle:
# DATABASE_URL="oci8://db_user:db_password@127.0.0.1:1521/db_name"
